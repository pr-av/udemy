package com.example.demo.ServiceImpl;

import com.twilio.Twilio;
import com.twilio.rest.api.v2010.account.Message;
import com.twilio.type.PhoneNumber;
public class SmsIntgrationServiceImpl {


	    public static final String ACCOUNT_SID = "your_account_sid";
	    public static final String AUTH_TOKEN = "your_auth_token";

	    public static void main(String[] args) {
	        Twilio.init(ACCOUNT_SID, AUTH_TOKEN);

	        // Replace with the recipient's WhatsApp number
	        String toWhatsAppNumber = "whatsapp:+1234567890";

	        // Replace with the Twilio WhatsApp sandbox number
	        String fromWhatsAppNumber = "whatsapp:+14155238886";

	        // Your message
	        String messageBody = "Hello, this is a Twilio WhatsApp message!";

	        Message message = Message.creator(
	                new PhoneNumber(toWhatsAppNumber), // to
	                new PhoneNumber(fromWhatsAppNumber), // from
	                messageBody
	        ).create();

	        System.out.println("Message SID: " + message.getSid());
	    }
	}
}
